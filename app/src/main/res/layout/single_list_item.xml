<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Non-Expandable Layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/non_expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/list_play_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/list_play_btn" />

                <TextView
                    android:id="@+id/list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto"
                    android:maxWidth="250dp"
                    android:maxLines="1"
                    android:text="Filename"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/list_date"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/list_play_btn"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/roboto_medium_italic"
                    android:text="Date"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/list_play_btn"
                    app:layout_constraintTop_toBottomOf="@id/list_title" />

                <TextView
                    android:id="@+id/list_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="00:00"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            d
            <!-- Expandable Layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/non_expandable_layout">

                <ImageButton
                    android:id="@+id/btn_delete_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingTop="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_baseline_delete_36"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"></ImageButton>

                <TextView
                    android:id="@+id/txt_delete_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintTop_toBottomOf="@id/btn_delete_audio"
                    app:layout_constraintStart_toStartOf="@id/btn_delete_audio"
                    app:layout_constraintEnd_toEndOf="@id/btn_delete_audio"
                    ></TextView>


                <ImageButton
                    android:id="@+id/btn_save_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingTop="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_baseline_save_alt_36"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_delete_audio"></ImageButton>

                <TextView
                    android:id="@+id/txt_save_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintTop_toBottomOf="@id/btn_save_audio"
                    app:layout_constraintStart_toStartOf="@id/btn_save_audio"
                    app:layout_constraintEnd_toEndOf="@id/btn_save_audio"
                    ></TextView>

                <ImageButton
                    android:id="@+id/btn_share_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingTop="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_baseline_share_36"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_save_audio"></ImageButton>

                <TextView
                    android:id="@+id/txt_share_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintTop_toBottomOf="@id/btn_share_audio"
                    app:layout_constraintStart_toStartOf="@id/btn_share_audio"
                    app:layout_constraintEnd_toEndOf="@id/btn_share_audio"
                    ></TextView>

                <ImageButton
                    android:id="@+id/btn_rename_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingTop="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_baseline_edit_36"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_share_audio"></ImageButton>

                <TextView
                    android:id="@+id/txt_rename_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rename"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintTop_toBottomOf="@id/btn_rename_audio"
                    app:layout_constraintStart_toStartOf="@id/btn_rename_audio"
                    app:layout_constraintEnd_toEndOf="@id/btn_rename_audio"
                    ></TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>