<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <TextView
        android:id="@+id/slide_txt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/first_screen_description"
        android:textColor="@color/text"
        android:textSize="30sp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/slide_img"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        />

    <ImageView
        android:id="@+id/slide_img"
        android:layout_width="wrap_content"
        android:layout_height="344dp"
        android:contentDescription="@string/mountain_scene"
        android:src="@drawable/onboarding1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>