<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="150dp" />
            <stroke android:width="1dip" android:color="@color/text" />
            <gradient android:angle="-90" android:startColor="@color/button_grad_yellow1" android:endColor="@color/button_grad_yellow2"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <corners android:radius="150dp" />
            <stroke android:width="1dip" android:color="@color/text" />
            <gradient android:angle="-90" android:startColor="@color/button_grad_yellow1" android:endColor="@color/button_grad_yellow2" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="150dp" />
            <stroke android:width="1dip" android:color="@color/text" />
            <gradient android:angle="-90" android:startColor="@color/button_grad_yellow1" android:endColor="@color/button_grad_yellow2" />
        </shape>
    </item>
</selector>